<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>
       <variable
           name="viewModel"
           type="com.osprey.home.ui.adddevice.AddDevicViewModel" />
   </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_add_device_layout" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llTurnOnBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_turn_on_bluetooth"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/turn_on_bluetooth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/bluetooth_makes_your_device_more_discoverable"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/sp_12" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/bg_gray"
                android:src="@drawable/ic_bluetooth"
                android:tint="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llTurnOnWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_turn_on_bluetooth"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="Turn on Wi-Fi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:fontFamily="@font/baloo2_medium"
                    android:text="@string/wi_fi_helps_your_device_connect_more_easily"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/sp_12" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/bg_gray"
                android:src="@drawable/ic_wifi"
                android:tint="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp_8"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/ic_exclaim" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/no_devices_found_try_to_manually_add_a_device"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text=""
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTryAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_try_connect"
                android:fontFamily="@font/baloo2_bold"
                android:paddingHorizontal="@dimen/dp_18"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/try_again"
                android:textColor="@color/primary"
                android:textSize="@dimen/sp_18" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.osprey.home.ui.adddevice.RadarView
            android:id="@+id/radarView"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_32" />

        <View
            android:id="@+id/viewHeaderBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@color/gray1F1F1F" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_12"
            android:fontFamily="@font/baloo2_medium"
            android:text="@string/add_manually"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:items="@{viewModel.uiState.deviceProfile}"
            android:layout_marginTop="@dimen/dp_8"
            android:nestedScrollingEnabled="false" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
